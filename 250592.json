            },
            {
              "protocol": "udp",
              "port": [7000-8000], // 游戏使用的UDP端口范围
              "outbound": "🎯 全球直连"
            },

            // 3. 协议级拦截
            {
                "ip_version": 6,
                "action": "reject" // 禁用IPv6
            },
            //QUIC 协议阻断,阻止 UDP/80+443 端口的 QUIC 协议,强制回退到 TCP 增强可监控性
            {
                "port": [
                    80,
                    443
                ],
                //另一种写法"protocol": "udp",
                "network": "udp",
                // 阻止 QUIC 协议
                "outbound": "reject"
            },
            //HTTP(80) 安全处理,非中国域名强制拒绝 HTTP 明文传输,保留国内网站兼容性（银行/政府网站等）
            {
                "protocol": "http",
                "port": 80,
                "outbound": "🚀 节点选择",
                // 仅针对非中国域名
                "invert": true
            },
            // 隐私敏感协议拦截,拦截加密货币和Tor流量
            {
                "protocol": [
                    "ftp",
                    "telnet",
                    "smtp",
                    "tor",
                    "bittorrent",
                    "bitcoin",
                    "ed2k"
                ],
                "action": "reject"
            },
            // ===== 2. 更新WebRTC拦截规则 =====
            {
                "action": "reject",
                "protocol": [
                    "stun",
                    "turn",
                    "quic",
                    "webrtc"
                ]
            },
            // ===== 3. 更新端口拦截规则 =====
            {
                "action": "reject",
                "port": [
                    3478,
                    3479,
                    5349,
                    5350,
                    19302,
                    19305
                ]
            },

            // 4. 隐私防护核心
            //HTTPS(443) 隐私过滤,拦截含 tracking/analytics 等关键词的加密跟踪域,覆盖 Google Analytics、Adobe Tracking 等常见追踪器
            {
                "protocol": "tls",
                "port": 443,
                "domain_keyword": [
                    "tracking",
                    "analytics",
                    "metrics"
                ],
                "outbound": "reject"
            },
            {
                "rule_set": [
                    "Category-Ads",
                    "BlockHttpDNS",
                    "Privacy",        // 基础隐私
                    "Tracking",       // 追踪器
                    "Tracker",        // 综合追踪
                    "Crypto",          // 加密货币
                    "PrivacyEnhanced",
                    "PrivateTracker"
                ],
                "action": "reject"
            },
            //隐私服务拦截,补充上面广告
            {
                "domain_regex": "(privacy|vpn|proxy|anonym)\\.(com|net|io|org)",
                "action": "reject"
            },

            //指纹拦截
            {
                "action": "reject",
                "domain_regex": [
                    "(fingerprint|deviceid|canvasid|webglid|fontscan|browserspy|pixelscan)",
                    "\\.(fpjs|fingerprintjs|browserleaks|amiunique|pixelscan|creepjs)\\."
                ]
            },

            // 5. 系统级规则
            {
                "ip_is_private": true,
                "action": "route",
                "outbound": "🎯 全球直连"
            },
            
            //拦截dns
            {
                "type": "logical",
                "mode": "or",
                "rules": [
                    {
                        "port": 53
                    },
                    {
                        "protocol": "dns"
                    }
                ],
                "action": "hijack-dns"
            },
            //解析得到域名或者ip，对HTTPS流量解析不到IP，那只能拿到真实域名和上面给到的fakeip
            {
                "action": "sniff",
                "inbound": [
                    "tun-in",
                    "mixed-in"
                ]
            },
            //进站来的都从域解析到ip，ipv4优先，HTTPS流量解析不了，遇到只会走兜底漏网之鱼规则
