{
  "dns": {
    "servers": [
      
      {
        "tag": "ali",
        "type": "https",
        "server": "dns.alidns.com",
        "domain_resolver": "hosts"
        //"detour": "🎯 全球直连"
      },
      {
        "tag": "google",
        "type": "https",
        "server": "dns.google",
        "domain_resolver": "hosts",
        "detour": "🚀 节点选择"
      },
      {
        "tag": "local",
        "type": "local"
        //"prefer_go": true
      },
      {
        "tag": "fake-ip-dns-server",
        "type": "fakeip",
        "inet4_range": "198.18.0.0/15",
        "inet6_range": "fc00::/18"
      },
      {
        "tag": "hosts",
        "type": "hosts",
        "predefined": {
          "dns.alidns.com": [
            "223.5.5.5",
            "223.6.6.6",
            "2400:3200::1",
            "2400:3200:baba::1"
          ],
          "dns.google": [
            "8.8.8.8",
            "8.8.4.4"
          ]
        }
      }
    ],
    "rules": [

      {
        "clash_mode": "Direct",
        "action": "route",
        "server": "local"
      },
      {
        "clash_mode": "Global",
        "action": "route",
        "server": "google"
      },

      {
        "query_type": ["ANY","HTTPS", "SVCB", "NAPTR", "SOA", "NS", "CAA", "OPT"],
        "action": "reject"
      },
      
      {
        "query_type": [
          "A",
          "AAAA"
        ],
        "action": "route",
        "server": "fake-ip-dns-server",
        "rewrite_ttl": 5
      },
      {
        "query_type": [
          "CNAME", 
          "TXT", 
          "MX", 
          "SRV"
        ],
        "action": "route",
        "server": "google"
      },
      { 
        "rule_set": [
          "category-ads-all", 
          "tracker"
        ], 
        "action": "reject" 
      }
    ],
    "cache_capacity": 4096,  
    "reverse_mapping": true,
    "disable_cache": false,
    "disable_expire": false,
    "independent_cache": true,
    "final": "google",
    "strategy": "ipv4_only"
  },
  "route": {
    "rules": [
      // 🧠 ① 嗅探流量协议，恢复域名（用于后续 resolve 和分流）
      {
        "action": "sniff",
        "sniffer": ["http", "tls", "quic", "dns"],
        "timeout": "1000ms"
      },

      // 🧠 ② 劫持系统 DNS 请求（UDP/53），确保走 sing-box DNS 模块
      {
        "type": "logical",
        "mode": "and",
        "rules": [
          { "network": "udp" },
          { "port": 53 }
        ],
        "action": "hijack-dns"
      },
  
      
  
      // 🧠 ③ fake-ip 网段触发二次解析（避免直接连接虚假 IP）
      {
        "ip_cidr": ["198.18.0.0/15", "fc00::/7"],
        "action": "resolve"
      },

      // 🧠 ④ 通用 resolve（用于 sniff 后恢复域名再分流）
      {
        "action": "resolve"
      },
  
      
      // 🧠 ⑤ clash_mode: Direct 模式的流量走直连
      {
        "clash_mode": "Direct",
        "action": "route",
        "outbound": "🎯 全球直连"
      },

      // 🧠 ⑥ clash_mode: Proxy 模式的流量走代理
      {
        "clash_mode": "Global",
        "action": "route",
        "outbound": "🚀 节点选择"
      },

      // 🧠 ⑨ 广告域名直接拦截（拒绝连接）
      {
        "rule_set": [
          "category-ads-all",
          "tracker"
        ],
        "action": "reject"
      },

      // ✅ ⑦ 精准 rule_set 分流到代理（优先于 geosite）
      {
        "rule_set": [
          "telegram",
          "github",
          "twitter",
          "youtube",
          "google",
          "gfw"
        ],
        "action": "route",
        "outbound": "🚀 节点选择"
      },

      // ✅ ⑧ 精准 IP 走直连（如 Binance 或 AWS）
      {
        "ip_cidr": [
          "122.248.193.92/32",
          "18.140.160.130/32",
          "13.228.58.214/32",
          "18.136.221.104/32",
          "13.214.82.8/32",
          "13.228.179.43/32"
        ],
        "action": "route",
        "outbound": "🎯 全球直连"
      },

      // ✅ ⑨ 国内 IP 网段走直连（cn_ip）
      {
        "rule_set": "cn_ip",
        "action": "route",
        "outbound": "🎯 全球直连"
      },

      // 🧠 ⑦ 国内域名（geosite-cn）走直连
      {
        "rule_set": [
          "binance",
          "cn",
          "private"
        ],
        "action": "route",
        "outbound": "🎯 全球直连"
      },

      // 🧠 ⑩ 私有 IP 地址走直连（如内网、路由器）
      {
        "ip_is_private": true,
        "action": "route",
        "outbound": "🎯 全球直连"
      },
      
      // 🧠 ⑪ fake-ip 网段兜底拒绝连接（防止 i/o timeout）
      {
        "ip_cidr": ["198.18.0.0/15", "fc00::/7"],
        "action": "reject"
      },
  
      // 🧠 ⑫ 拒绝连接到无效地址（如 0.0.0.0:0）
      {
        "ip_cidr": ["0.0.0.0/32", "::/128"],
        "action": "reject"
      }

    ],
    "final": "🐟 漏网之鱼",
    "default_domain_resolver": {
